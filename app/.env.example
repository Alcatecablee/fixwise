# ========================================
# NEUROLINT APP ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control


# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project settings > API
# Note: Both public and server-only versions are needed
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side only (used in API routes and scripts)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here


# ========================================
# AUTHENTICATION
# ========================================
# JWT secret for session management
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000


# ========================================
# PAYPAL CONFIGURATION
# ========================================
# PayPal credentials for billing/subscriptions
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
# Environment: sandbox or live
PAYPAL_MODE=sandbox


# ========================================
# GITHUB INTEGRATION
# ========================================
# GitHub OAuth app credentials for repository integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_TOKEN=your-github-personal-access-token


# ========================================
# GITLAB INTEGRATION
# ========================================
# GitLab credentials for repository integration
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret
GITLAB_TOKEN=your-gitlab-personal-access-token


# ========================================
# JENKINS INTEGRATION
# ========================================
# Jenkins CI/CD integration
JENKINS_URL=https://your-jenkins-instance.com
JENKINS_USERNAME=your-jenkins-username
JENKINS_API_TOKEN=your-jenkins-api-token


# ========================================
# LLM/AI CONFIGURATION (Optional)
# ========================================
# For AI-powered features (if enabled)
LLM_PROVIDER=openai
LLM_API_KEY=your-llm-api-key


# ========================================
# ANALYTICS
# ========================================
# Vercel Analytics (automatically configured on Vercel)
# No manual configuration needed if deployed on Vercel


# ========================================
# EMAIL SERVICE
# ========================================
# Resend API for transactional emails
RESEND_API_KEY=your-resend-api-key


# ========================================
# APPLICATION SETTINGS
# ========================================
# Environment: development, staging, or production
NODE_ENV=development

# Public API URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# App domain
NEXT_PUBLIC_APP_URL=http://localhost:3000


# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
# WebSocket server for real-time collaboration
WEBSOCKET_PORT=8080
WEBSOCKET_URL=ws://localhost:8080


# ========================================
# RATE LIMITING
# ========================================
# Redis URL for rate limiting (optional)
REDIS_URL=redis://localhost:6379


# ========================================
# MONITORING & LOGGING
# ========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable verbose logging
ENABLE_VERBOSE_LOGGING=false
